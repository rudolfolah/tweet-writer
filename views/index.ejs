<%- include("_header") %>
<div class="flex place-content-center mt-12 bg-white m-20 p-10">
    <div>
        <h1 class="text-2xl">Tweet Writer</h1>
        <p>Enter your article or content:</p>
        <textarea id="content" class="border-solid border-2 border-emerald-500"></textarea>
        <p>Click "Generate" and you will receive a list of tweets generated based on the above content</p>
        <div class="my-5">
            <button id="generate" class="bg-gradient-to-br from-teal-100 to-green-200 p-3 hover:from-teal-300 hover:to-green-300 border border-slate-200 rounded">
                Generate
            </button>
            <input id="includeRewrites" type="checkbox" class="form-checkbox ml-2 h-3 w-3 text-green-600">
            <label for="includeRewrites" class="ml-1 text-sm text-gray-900">Include Rewrites</label>
        </div>
        <h1 class="text-2xl">Tweets</h1>
        <div id="results" class="bg-blue-500 p-5">
            <div class="my-1 p-3 bg-white">
                <p class="text-xs font-bold">Twitter User</p>
                <p class="text-xs">Full User Name</p>
                <p class="my-2">Example tweet</p>
                <p class="text-sm">Select and copy the tweet</p>
            </div>
        </div>
    </div>
</div>

<%- include("_footer") %>
